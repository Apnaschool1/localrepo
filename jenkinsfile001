pipeline {
    agent any
    stages {
        stage ('Create and Copy Folder') {
            steps {
                script {
                    def sourceFolder = new File("d:\my Source")
                    def destinationFolder = new File("d:\my destination")
            
                    sourceFolder.mkdirs()
                    destinationFolder.mkdirs()
                    FileUtils.copyDirectory(sourceFolder, destinationFolder)
                }
            }
        }
    }
}
