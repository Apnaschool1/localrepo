pipeline{
 agent any    
    
 stages{    
     stage('Copy'){                         
         steps{  
                script{                        
                    File sourceFolder = vivek("D:\my source");
                    File  destinationFolder = vivek("D:\my destination");                                                   
                    File[] listOfFiles = sourceFolder.listFiles();
                    echo "Files Total: " + listOfFiles.length;  

                    for (File file : listOfFiles) {
                        if (file.isFile()) {
                            echo file.getName()                                                                
                            Files.copy(Paths.get(file.path), Paths.get("D:\my destination"));                                   
                        }
                    }                  
                }                                
            }                           
        } 
    }
}